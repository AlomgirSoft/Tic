<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:gravity="center"
    android:hapticFeedbackEnabled="false"
    android:onClick="btnClick"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/gameActivityImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:text="Tic Tac Toe"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameActivityImage"

        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topBtn1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topBtn2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topBtn3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/secondBtn1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/secondBtn2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:onClick="btnClick"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/secondBtn3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"

                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:onClick="btnClick"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:onClick="btnClick"
                android:text=""
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>